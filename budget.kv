#:kivy 2.1
<Label>:
    text_size: self.width,None
    halign:'center'
    valign:'center'

##--------------- Views



##--------------- Basic Layout Pieces
<TopBar>:
    titleLabel:titleLabel
    amountInput:amountInput
    saveButton:saveButton
    addBillButton:addBillButton
    orientation: 'horizontal'

    Label:
        id:titleLabel
        text:root.title

        color: [1,1,1,1]
        size_hint: 3/7,1
        text_size: self.width-20, self.height
        halign: 'left'
        valign: 'middle'

    MoneyInput:
        id:amountInput
        text: ''
        multiline: False
        size_hint: 2/7,0.35
        pos_hint:{'x':0.5,'center_y':0.5}

    Button:
        id: saveButton
        text: 'Save Changes'
        size_hint: 1/7,0.35
        pos_hint:{'x':0.5,'center_y':0.5}

    Button:
        id: addBillButton
        text: 'Add New Bill'
        size_hint: 1/7, 0.35
        pos_hint:{'x':0.5,'center_y':0.5}

<SideBar>:


<SelectedView>:

##--------------- MainWindow Definition
<MainWindow>:
    pos:root.pos
    size:root.size
    topBar: topBar
    sideBar:sideBar
    selectedView:selectedView

    TopBar:
        id: topBar
        pos_hint: {'x':0,'y':0.9}
        size_hint:(1,0.1)

    SideBar:
        id:sideBar
        pos_hint:{'x':1,'y':0}
        size_hint: 0.1,0.9

    SelectedView:
        id:selectedView
        pos_hint:{'x':0,'y':0}
        size_hint:1,0.9

